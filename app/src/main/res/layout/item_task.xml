<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="com.poncholay.todolist.Activities.List.ListActivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:onClick="deleteTask"
	android:clickable="true"
	android:background="@color/white">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
		android:paddingBottom="@dimen/activity_vertical_margin"
		android:background="?android:attr/selectableItemBackground">

		<TextView
			android:id="@+id/task_date"
			android:layout_width="70dp"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:text="@string/date"
			android:textSize="15sp"
			android:ellipsize="end"
			android:maxLines="2"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:layout_alignBottom="@+id/task_content"
			android:background="@drawable/item_task_border"/>

		<TextView
			android:id="@+id/task_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/generic_task"
			android:textSize="20sp"
			android:ellipsize="end"
			android:maxLines="1"
			android:layout_alignParentTop="true"
			android:layout_alignParentEnd="true"
			android:layout_toEndOf="@+id/task_date"
			android:paddingStart="10dp"
			android:textColor="@color/black"/>

		<TextView
			android:id="@+id/task_content"
			android:layout_width="wrap_content"
			android:layout_height="20sp"
			android:text="@string/generic_content"
			android:textSize="15sp"
			android:ellipsize="end"
			android:maxLines="1"
			android:layout_below="@+id/task_title"
			android:layout_alignParentEnd="true"
			android:layout_toEndOf="@+id/task_date"
			android:paddingStart="10dp"/>
	</RelativeLayout>
</RelativeLayout>